#!/usr/bin/env python

import sys
import os
import subprocess
import collections

#              alias     real              virsh             host   port
alias_list = [('hm1'    , 'hm1'           , None            , 'hm1', '22'),
              ('debqap' , 'hm1-0-vdebqap' , 'hm1-0-vdebqap' , 'hm1', '22'),
              
              ('hm2'    , 'hm2'           , None            , 'hm2', '22'),
              ('debqa64', 'hm2-0-vdebqa64', 'hm2-0-vdebqa64', 'hm2', '22'),
              ('qa64'   , 'hm2-1-vqa64'   , 'hm2-1-vqa64'   , 'hm2', '22'),
              ('dev64'  , 'hm2-2-vdev64'  , 'hm2-2-vdev64'  , 'hm2', '22'),
              ('debu164', 'hm2-5-vdebu164', 'hm2-5-vdebu164', 'hm2', '22'),

              ('hm3'    , 'hm3'           , None            , 'hm3', '22'),
              ('mail'   , 'hm3-0-mail-32' , 'hm3-0-mail-32' , 'hm3', '22'),
