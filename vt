              ('debqa'  , 'hm3-8-vdebqa'  , 'hm3-8-vdebqa'  , 'hm3', '22'),
              ('mx'     , 'hm3-9-vmx'     , 'hm3-9-vmx'     , 'hm3', '22'),              
              ('debu1'  , 'hm3-10-vdebu1' , 'hm3-10-vdebu1' , 'hm3', '22'),
              ('mp'     , 'hm3-11-vmp'    , 'hm3-11-vmp'    , 'hm3', '22'),
              
