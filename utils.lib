#!/bin/bash

function init {
    repo=$HOME/repo
    busybox=$repo/busybox

    if [ -z "$linux" ]; then
	linux=$repo/linux
    fi
    vmlinux=$linux/vmlinux
    vmlinuz=$linux/arch/x86/boot/bzImage
    system_map=$linux/System.map
    config=$linux/.config
}

function die {
    echo $1
    exit 1
}
